<h1>Contacts#new</h1>

<%= form_for :contact, url: contacts_path do |f| %>

  <% if @contact and  @contact.errors.any? %>
    <p>
      <% @contact.errors.full_messages.each do |msg| %>

        <ul>
          <li><%= msg %></li>
        </ul>

      <% end %>
    </p>
  <% end %>

  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :message %> <br>
    <%= f.text_area :message %>
  </p>

  <p>
    <%= f.submit 'Add new contact' %>
  </p>

<% end %>
